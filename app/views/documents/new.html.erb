<% provide(:title, "New Document") %>
<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Document For Lawsuit: <%= @lawsuit.case_number %></h3>
      </div>
      <div class="panel-body">
        <%= form_for :document, url: create_document_path(@lawsuit) do |f| %>
          <div class="form-group">
            <%= f.label :name, 'Name *' %>
            <%= f.text_field :name, class: 'form-control', required: true %>
          </div>

          <div class="form-group">
            <%= f.label :url, 'URL / Link *' %>
            <%= f.text_field :url, class: 'form-control', required: true %>
          </div>

          <div class="form-group">
            <%= f.submit 'Submit', class: 'btn btn-lg btn-primary' %>
          </div>
          <p><small>Fields marked with * are required.</small></p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Instructions</h3>
      </div>
      <div class="panel-body">
        <% if @document.errors.any? %>

          <% @document.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger" role="alert"><%= msg %></div>
          <% end %>

        <% else %>
          <div class="alert alert-success" role="alert"><strong>Name: </strong> Enter the name of the document.</div>
          <div class="alert alert-success" role="alert"><strong>URL: </strong> Enter the URL of the document in Dropbox, etc. Please enter complete URL including the http/https.</div>
        <% end %>
        <hr />
        <%= link_to 'Manage Documents', manage_documents_path(@lawsuit), class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
  </div>
</div>