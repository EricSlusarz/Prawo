<% provide(:title, "Document Details: #{@document.name}") %>
<div class="row">
  <div class="col-md-8">
    <h1>
      <%= @document.lawsuit.case_number %> Document: <strong><%= @document.name %></strong>
    </h1>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"></h3>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <tr>
            <th>Lawsuit:</th>
            <td><%= @document.lawsuit.case_number %>: <strong><%= @document.lawsuit.client.name %> vs <%= @document.lawsuit.opposite_party %></strong></td>
          </tr>

          <tr>
            <th>Name:</th>
            <td><%= @document.name %></td>
          </tr>

          <tr>
            <th>Date:</th>
            <td><%= time_tag @document.created_at %></td>
          </tr>

          <tr>
            <th>Link:</th>
            <td><%= link_to @document.url, @document.url %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Actions</h3>
      </div>
      <div class="panel-body">
        <%= link_to 'Delete', remove_document_path(@document), data: { confirm: 'Do you want to delete this document and all its associated data?' }, class: 'btn btn-lg btn-danger' %>

        <hr />

        <%= link_to 'All Documents', manage_documents_path(@document.lawsuit), class: 'btn btn-primary btn-lg' %>
        <%= link_to 'New Documents', new_document_path(@document.lawsuit), class: 'btn btn-success btn-lg' %>

        <hr />

        <%= link_to 'Client Details', client_path(@document.lawsuit.client), class: 'btn btn-primary btn-lg' %>
        <%= link_to 'Lawsuit Details', lawsuit_details_path(@document.lawsuit), class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Information</h3>
      </div>
      <div class="panel-body">
        Information
      </div>
    </div>
  </div>
</div>