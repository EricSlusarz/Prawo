<% provide(:title, "Manage Clients") %>
<div class="row">
  <div class="col-md-10">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Manage Clients</h3>
      </div>
      <div class="panel-body">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Phone</th>
              <th>City</th>
              <th>Cases</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @clients.each do |client| %>
              <tr>
                <td><%= client.id %></td>
                <td><%= link_to client.name, client_path(client) %></td>
                <td><%= client.phone %></td>
                <td><%= client.city %></td>
                <td>Coming Soon...</td>
                <td>
                  <%= link_to 'View', client_path(client), class: 'btn btn-sm btn-success' %>
                  <%= link_to 'Fees', manage_fees_path(client), class: 'btn btn-sm btn-primary' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Actions</h3>
      </div>
      <div class="panel-body">
        <%= link_to 'New Client', new_client_path, class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
  </div>
</div>
