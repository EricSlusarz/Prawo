<% provide(:title, "New Fees") %>
<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Fees For <%= @client.name %></h3>
      </div>
      <div class="panel-body">
        <%= form_for :fee, url: create_fees_path(@client) do |f| %>
          <div class="form-group">
            <%= f.label :details, 'Details / Remarks *' %>
            <%= f.text_field :details, class: 'form-control', required: true %>
          </div>

          <div class="form-group">
            <%= f.label :amount, 'Fee Amount *' %>
            <%= f.number_field :amount, class: 'form-control', required: true %>
          </div>

          <div class="form-group">
            <%= f.submit 'Submit', class: 'btn btn-lg btn-primary' %>
          </div>
          <p><small>Fields marked with * are required.</small></p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Instructions</h3>
      </div>
      <div class="panel-body">
        <% if @fee.errors.any? %>

          <% @fee.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger" role="alert"><%= msg %></div>
          <% end %>

        <% else %>
          <div class="alert alert-success" role="alert"><strong>Details / Remarks: </strong> Enter details/remarks about the fees.</div>
          <div class="alert alert-success" role="alert"><strong>Amount: </strong> Enter the fee amount. Numerical value required.</div>
        <% end %>
        <hr />
        <%= link_to 'Back', manage_fees_path(@client), class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
  </div>
</div>