<% provide(:title, "Client Details: #{@client.name}") %>
<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"></h3>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <tr>
            <th>Name</th>
            <td><%= @client.name %></td>
          </tr>

          <tr>
            <th>Father's / Director's Name</th>
            <td><%= @client.father_name %></td>
          </tr>

          <tr>
            <th>Phone</th>
            <td><%= @client.phone %></td>
          </tr>

          <tr>
            <th>Email</th>
            <td><%= @client.email %></td>
          </tr>

          <tr>
            <th>Date of Birth / Incorporation</th>
            <td><%= time_tag @client.date_of_birth %></td>
          </tr>

          <tr>
            <th>Address</th>
            <td><%= @client.address %></td>
          </tr>

          <tr>
            <th>City</th>
            <td><%= @client.city %></td>
          </tr>

          <tr>
            <th>State</th>
            <td><%= @client.state %></td>
          </tr>

          <tr>
            <th>PIN / ZIP Code</th>
            <td><%= @client.pin_zip %></td>
          </tr>

          <tr>
            <th>Country</th>
            <td><%= @client.country_name %></td>
          </tr>

        </table>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <h1 class="text-center">
      <strong><%= @client.name %></strong>
    </h1>
    <hr />
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Actions</h3>
      </div>
      <div class="panel-body">

        <%= link_to 'View Lawsuits', my_portal_lawsuits_manage_path, class: 'btn btn-lg btn-primary' %>
        <%= link_to 'View Fees', my_portal_fees_path, class: 'btn btn-lg btn-primary' %>

      </div>
    </div>
  </div>
</div>