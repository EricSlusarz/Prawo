<% provide(:title, "Lawsuit Details: #{@lawsuit.client.name} vs #{@lawsuit.opposite_party}") %>
<div class="row">
  <div class="col-md-9">
    <h1>
      <strong><%= @lawsuit.case_number %>:</strong>
      <%= "#{@lawsuit.client.name} vs #{@lawsuit.opposite_party}" %>
    </h1>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"></h3>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <tr>
            <th>Case Number</th>
            <td><%= @lawsuit.case_number %></td>
          </tr>

          <tr>
            <th>Case Type</th>
            <td><%= @lawsuit.case_type %></td>
          </tr>

          <tr>
            <th>Opposite Party</th>
            <td><%= @lawsuit.opposite_party %></td>
          </tr>

          <tr>
            <th>Court Name</th>
            <td><%= @lawsuit.court_name %></td>
          </tr>

          <tr>
            <th>Location</th>
            <td><%= @lawsuit.location %></td>
          </tr>

          <tr>
            <th>Filing Date</th>
            <td><%= time_tag @lawsuit.filing_date %></td>
          </tr>

          <tr>
            <th>Details</th>
            <td><%= @lawsuit.case_details %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Actions</h3>
      </div>
      <div class="panel-body">

        <%= link_to 'View Documents', my_portal_documents_manage_path(@lawsuit), class: 'btn btn-lg btn-primary' %>
        <hr />
        <%= link_to 'View Updates', my_portal_updates_manage_path(@lawsuit), class: 'btn btn-lg btn-primary' %>

        <hr />

      </div>
    </div>
  </div>
</div>