<% provide(:title, "Update Details: #{@update.lawsuit.case_number}: #{@update.title}") %>
<div class="row">
  <div class="col-md-9">
    <h1>
      <%= @update.lawsuit.case_number %> Update: <strong><%= @update.title %></strong>
    </h1>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"></h3>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <tr>
            <th>Lawsuit:</th>
            <td><%= @update.lawsuit.case_number %>: <strong><%= @update.lawsuit.client.name %> vs <%= @update.lawsuit.opposite_party %></strong></td>
          </tr>

          <tr>
            <th>Title:</th>
            <td><%= @update.title %></td>
          </tr>

          <tr>
            <th>Date:</th>
            <td><%= time_tag @update.created_at %></td>
          </tr>

          <tr>
            <th>Details:</th>
            <td><%= @update.details %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Actions</h3>
      </div>
      <div class="panel-body">
        <%= link_to 'All Updates', my_portal_updates_manage_path(@update.lawsuit), class: 'btn btn-primary btn-lg' %>

        <hr />

        <%= link_to 'Lawsuit Details', my_portal_lawsuits_details_path(@update.lawsuit), class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  </div>
</div>