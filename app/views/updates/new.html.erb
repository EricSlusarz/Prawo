<% provide(:title, "New Update") %>
<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Update For <%= @lawsuit.case_number %></h3>
      </div>
      <div class="panel-body">
        <%= form_for :update, url: create_update_path(@lawsuit) do |f| %>
          <div class="form-group">
            <%= f.label :title, 'Title *' %>
            <%= f.text_field :title, class: 'form-control', required: true %>
          </div>

          <div class="form-group">
            <%= f.label :details, 'Details *' %>
            <%= f.text_field :details, class: 'form-control', required: true %>
          </div>

          <div class="form-group">
            <%= f.submit 'Submit', class: 'btn btn-lg btn-primary' %>
          </div>
          <p><small>Fields marked with * are required.</small></p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Instructions</h3>
      </div>
      <div class="panel-body">
        <% if @update.errors.any? %>

          <% @update.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger" role="alert"><%= msg %></div>
          <% end %>

        <% else %>
          <div class="alert alert-success" role="alert"><strong>Title: </strong> Enter the short title of the update.</div>
          <div class="alert alert-success" role="alert"><strong>Details: </strong> Specify the details of the update.</div>
        <% end %>
        <hr />
        <%= link_to 'Back', manage_updates_path(@lawsuit), class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
  </div>
</div>