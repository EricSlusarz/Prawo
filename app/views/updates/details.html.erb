<% provide(:title, "Update Details: #{@update.lawsuit.case_number}: #{@update.title}") %>
<div class="row">
  <div class="col-md-8">
    <h1>
      Lawsuit Update: <strong><%= @update.title %></strong>
    </h1>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"></h3>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <tr>
            <th>Lawsuit:</th>
            <td><%= @update.lawsuit.case_number %>: <strong><%= @update.lawsuit.client.name %> vs <%= @update.lawsuit.opposite_party %></strong></td>
          </tr>

          <tr>
            <th>Title:</th>
            <td><%= @update.title %></td>
          </tr>

          <tr>
            <th>Date:</th>
            <td><%= time_tag @update.created_at %></td>
          </tr>

          <tr>
            <th>Details:</th>
            <td><%= @update.details %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Actions</h3>
      </div>
      <div class="panel-body">
        <%= link_to 'Edit', edit_update_path(@update), class: 'btn btn-lg btn-info' %>
        <%= link_to 'Delete', remove_update_path(@update), data: { confirm: 'Do you want to delete this update and all its associated data?' }, class: 'btn btn-lg btn-danger' %>

        <hr />
        <%= link_to 'All Updates', manage_updates_path(@update.lawsuit), class: 'btn btn-primary btn-lg' %>
        <%= link_to 'New Update', new_update_path(@update.lawsuit), class: 'btn btn-success btn-lg' %>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Information</h3>
      </div>
      <div class="panel-body">
        Information
      </div>
    </div>
  </div>
</div>