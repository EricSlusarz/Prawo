<% provide(:title, "User Details: #{@user.name}") %>
<div class="row">
  <div class="col-md-8">
    <h1>
      User:
      <strong><%= @user.name %></strong>
    </h1>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"></h3>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <tr>
            <th>Name</th>
            <td><%= @user.name %></td>
          </tr>

          <tr>
            <th>Father's Name</th>
            <td><%= @user.father_name %></td>
          </tr>

          <tr>
            <th>Phone</th>
            <td><%= @user.phone %></td>
          </tr>

          <tr>
            <th>Email</th>
            <td><%= @user.email %></td>
          </tr>

          <tr>
            <th>Date of Birth</th>
            <td><%= time_tag @user.date_of_birth %></td>
          </tr>

          <tr>
            <th>Address</th>
            <td><%= @user.address %></td>
          </tr>

          <tr>
            <th>City</th>
            <td><%= @user.city %></td>
          </tr>

          <tr>
            <th>State</th>
            <td><%= @user.state %></td>
          </tr>

          <tr>
            <th>PIN / ZIP Code</th>
            <td><%= @user.pin_zip %></td>
          </tr>

          <tr>
            <th>Country</th>
            <td><%= @user.country_name %></td>
          </tr>

          <tr>
            <th>Notes</th>
            <td><%= @user.notes %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Actions</h3>
      </div>
      <div class="panel-body">
        <%= link_to 'Edit', admin_users_edit_path(@user), class: 'btn btn-lg btn-info' %>
        <%= link_to 'Delete', admin_users_remove_path(@user), data: { confirm: 'Do you want to delete this user and all its associated data?' }, class: 'btn btn-lg btn-danger' %>
        <%= link_to 'All Users', admin_users_index_path, class: 'btn btn-primary btn-lg' %>
        <hr />

        <% if @user.enabled? %>
          <%= link_to 'Disable', admin_users_disable_path(@user), data: { confirm: 'Do you want to disable this user?' }, class: 'btn btn-lg btn-danger' %>
        <% else %>
          <%= link_to 'Enable', admin_users_enable_path(@user), data: { confirm: 'Do you want to enable this user?' }, class: 'btn btn-lg btn-success' %>
        <% end %>

        <%= link_to 'View Logs', admin_users_logs_path(@user), class: 'btn btn-lg btn-success' %>
      </div>
    </div>
  </div>
</div>