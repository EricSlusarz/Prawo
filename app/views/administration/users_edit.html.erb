<% provide(:title, 'Edit User') %>
<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit User</h3>
      </div>
      <div class="panel-body">
        <%= form_for :user, url: admin_users_update_path(@user) do |form| %>
          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, required: true, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :father_name %>
            <%= form.text_field :father_name, required: true, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :job_title %>
            <%= form.text_field :job_title, required: true, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :date_of_birth %>
            <%= form.date_select :date_of_birth, required: true, class: 'form-control', start_year: 1930 %>
          </div>

          <div class="form-group">
            <%= form.label :phone %>
            <%= form.phone_field :phone, required: true, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :email %>
            <%= form.email_field :email, required: true, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :address %>
            <%= form.text_area :address, required: true, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :city %>
            <%= form.text_field :city, required: true, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :pin_zip %>
            <%= form.text_field :pin_zip, required: true, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :state %>
            <%= form.text_field :state, required: true, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :country %>
            <%= form.country_select :country, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :notes %>
            <%= form.text_area :notes, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.submit class: 'btn btn-lg btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Instructions</h3>
      </div>
      <div class="panel-body">
        <% if @user.errors.any? %>

          <% @user.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger" role="alert"><%= msg %></div>
          <% end %>

        <% else %>
          <div class="alert alert-success" role="alert"><strong>Name:</strong> Fill complete name of the user.<br/></div>
          <div class="alert alert-success" role="alert"><strong>Father's Name:</strong> Fill father's name of the user.<br/></div>
          <div class="alert alert-success" role="alert"><strong>Job Title:</strong> Specify job title of the user.<br/></div>
          <div class="alert alert-success" role="alert"><strong>Date of Birth:</strong> Fill date of birth of the user.<br/></div>
          <div class="alert alert-success" role="alert"><strong>Phone:</strong> Fill the phone number of the user along with country code.<br/></div>
          <div class="alert alert-success" role="alert"><strong>Email:</strong> Fill email address of the user.<br/></div>
          <div class="alert alert-success" role="alert"><strong>Address:</strong> Fill address of the user.<br/></div>
          <div class="alert alert-success" role="alert"><strong>City:</strong> Fill city name. No initials.<br/></div>
          <div class="alert alert-success" role="alert"><strong>PIN / ZIP:</strong> Fill postal PIN/ZIP code.<br/></div>
          <div class="alert alert-success" role="alert"><strong>State:</strong> Fill state name. No initials.<br/></div>
          <div class="alert alert-success" role="alert"><strong>Country:</strong> Select country name from the drop down.<br/></div>
          <div class="alert alert-success" role="alert"><strong>Notes:</strong> Put additional notes about the user here.</div>
          <hr />
          <%= link_to 'Back to User Details', admin_users_details_path(@user), class: 'btn btn-lg btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>