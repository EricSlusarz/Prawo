<% provide(:title, "View User Logs") %>
<div class="row">
  <div class="col-md-12">
    <h1 class="text-center">Logs for <%= @user.name %></h1>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">View User Logs</h3>
      </div>
      <div class="panel-body">
        <table class="table table-hover table-striped">
          <thead>
          <tr>
            <th>Log ID</th>
            <th>User</th>
            <th>Date</th>
            <th>Details</th>
          </tr>
          </thead>
          <tbody>
          <% @logs.each do |log| %>
            <tr>
              <td><%= log.id %></td>
              <td><%= link_to log.user.name, admin_users_details_path(log.user) %></td>
              <td><%= time_tag log.created_at %></td>
              <td><%= log.detail %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <hr />
        <div class="flickr_pagination">
          <%= will_paginate @logs %>
        </div>
      </div>
    </div>
  </div>
</div>
