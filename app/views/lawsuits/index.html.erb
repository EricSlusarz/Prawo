<% provide(:title, "Manage Lawsuits") %>
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Manage Lawsuits</h3>
      </div>
      <div class="panel-body">
        <table class="table table-hover table-striped">
          <thead>
          <tr>
            <th>Case Number</th>
            <th>Case Type</th>
            <th>Client</th>
            <th>Opposite Party</th>
            <th>Court</th>
            <th>Location</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
          <% @lawsuits.each do |lawsuit| %>
            <tr>
              <td><%= link_to lawsuit.case_number, lawsuit_details_path(lawsuit) %></td>
              <td><%= lawsuit.case_type %></td>
              <td><%= link_to lawsuit.client.name, client_path(lawsuit.client) %></td>
              <td><%= lawsuit.opposite_party %></td>
              <td><%= lawsuit.court_name %></td>
              <td><%= lawsuit.location %></td>
              <td>
                <%= link_to 'Details', lawsuit_details_path(lawsuit), class: 'btn btn-sm btn-primary' %>
                <%= link_to 'Edit', edit_lawsuit_path(lawsuit), class: 'btn btn-sm btn-success' %>
                <%= link_to 'Delete', remove_lawsuit_path(lawsuit), data: { confirm: 'Do you want to delete this update and all its associated data?' }, class: 'btn btn-sm btn-danger' %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <hr />
        <div class="flickr_pagination">
          <%= will_paginate @lawsuits %>
        </div>
      </div>
    </div>
  </div>
</div>
